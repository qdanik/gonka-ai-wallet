{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "useIgnoreFile": true,
    "defaultBranch": "main",
    "enabled": true,
    "clientKind": "git"
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "performance": {
        "noDelete": "off",
        "useTopLevelRegex": "error"
      },
      "nursery": {
        "noImportCycles": "error"
      },
      "complexity": {
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noInvalidPositionAtImportRule": "off"
      },
      "suspicious": {
        "noImplicitAnyLet": "off",
        "noExplicitAny": "off",
        "noUnknownAtRules": "off"
      },
      "security": {
        "noBlankTarget": "error"
      },
      "recommended": true
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "identifierOrder": "natural"
          }
        }
      }
    }
  }
}
